{
  "client": "./src/client/",
  "server": "./src/server/",
  "htmltemplates": "./src/client/app/**/*.html",
  "css": [
    "./src/client/content/customtheme.css",
    "./src/client/content/styles.css"
  ],
  "js": [
    "./src/client/app/**/*.module.js",
    "./src/client/app/**/*.js",
    "!src/client/app/**/*.spec.js"
  ],
  "specs": [
    "./src/client/app/**/*.spec.js",
    "./src/client/test/unit/**/*.spec.js"
  ],
  "nodejs": [
    "./src/server/**/*.js"
  ],
  "fonts": [
    "./node_modules/font-awesome/fonts/**/*.*"
  ],
  "images": [
    "./src/client/content/images/**/*"
  ],
  "build": "./build/",
  "analysis": "./analysis/",
  "vendorjs": [
    "./node_modules/jquery/dist/jquery.js",
    "./node_modules/angular/angular.js",
    "./node_modules/angular-animate/angular-animate.js",
    "./node_modules/angular-route/angular-route.js",
    "./node_modules/angular-sanitize/angular-sanitize.js",
    "./node_modules/bootstrap/dist/js/bootstrap.js",
    "./node_modules/toastr/toastr.js",
    "./node_modules/moment/moment.js",
    "./bower_components/extras.angular.plus/ngplus-overlay.js"
  ],
  "vendorcss": [
    "./node_modules/bootstrap/dist/css/bootstrap.min.css",
    "./node_modules/font-awesome/css/font-awesome.min.css",
    "./node_modules/toastr/toastr.css"
  ],
  "jscs": "config/.jscsrc",
  "jshintrc":  "config/.jshintrc"
}